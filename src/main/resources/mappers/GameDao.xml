<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.promotion.core.dao.GameDao">
    <resultMap type="Game" id="GameNameResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="uid" column="uid"/>
        <result property="secertKey" column="secert_key"/>
        <result property="loginUrl" column="login_url"/>
        <result property="paycallbackUrl" column="paycallback_url"/>
    </resultMap>
    <sql id="Base_Column_List">
        select id,
               name,
               uid,
               secert_key,
               login_url,
               paycallback_url
        from zy_game
    </sql>

    <select id="selectAllGame" resultMap="GameNameResult">
        <include refid="Base_Column_List"/>
    </select>

    <select id="selectGameList" parameterType="map" resultMap="GameNameResult">
        <include refid="Base_Column_List"/>
        <where>
            <if test="gameId != null and  gameId!= -1">
                id=#{gameId}
            </if>
            <if test="name != null and  name!='' ">
                and name like '%${name}%'
            </if>
            <if test="uid != null and  uid!=-1 ">
                and uid=#{uid}
            </if>
            <if test="loginUrl != null and  loginUrl!='' ">
                and login_url=#{loginUrl}
            </if>
            <if test="paycallbackUrl != null and  paycallbackUrl!='' ">
                and paycallback_url=#{paycallbackUrl}
            </if>
        </where>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="selectGame" parameterType="int" resultMap="GameNameResult">
        <include refid="Base_Column_List"/>
        where id = #{gameid}
    </select>

    <delete id="deleteGame" parameterType="int">
        delete
        from zy_game
        where id = #{gameid}
    </delete>

    <update id="updateGame" parameterType="Game">
        update zy_game
        <set>
            <if test="id != null and  id!= -1">
                id=#{id},
            </if>
            <if test="name != null and  name!='' ">
                name=#{name},
            </if>
            <if test="uid != null and  uid!=-1 ">
                uid=#{uid},
            </if>
            <if test="loginUrl != null and  loginUrl!='' ">
                login_url=#{loginUrl},
            </if>
            <if test="paycallbackUrl != null and  paycallbackUrl!='' ">
                paycallback_url=#{paycallbackUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <insert id="insertGame" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="Game">
        insert into zy_game(name, uid, secert_key, login_url, paycallback_url)
        values (#{name}, #{uid}, #{secertKey}, #{loginUrl}, #{paycallbackUrl})
    </insert>

</mapper>
